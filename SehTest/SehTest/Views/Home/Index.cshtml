@{
    ViewData["Title"] = "Home Page";
}

    <div class="row no-gutters m-3">
        <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
            <div class="card-header text-center">
                Please enter slide title and content:
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Result", "Home", FormMethod.Post))
                {
                    <div class="row no-gutters">
                        <div class="form-group col-md-12">
                            <input name="Title" type="text" class="form-control" placeholder="Title" />
                        </div>
                        <div class="form-group col-md-12">
                            <input name="Content" type="text" class="form-control" placeholder="Content" />
                        </div>
                        <button type="submit" class="btn btn-block btn-primary">Find Image</button>
                    </div>
                }
            </div>
        </div>
    </div>
